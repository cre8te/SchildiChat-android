<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- COLORS -->

    <color name="accent_sc_dark_Syllable">#3E4A66</color>
    <color name="accent_sc_dark_Syllable_alpha25">#3E4A66BD</color>
